{
  "name": "ngx-loading",
  "version": "0.0.3",
  "description": "A loading spinner for Angular 4.",
  "main": "index.js",
  "scripts": {
    "transpile": "ngc",
    "package": "rollup -c",
    "minify": "uglifyjs dist/bundles/ngx-loading.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/ngx-loading.umd.min.js",
    "prepublish": "npm run transpile && npm run package && npm run minify",
    "publish": "cd dist && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zak-C/ngx-loading.git"
  },
  "keywords": [
    "Angular",
    "ng",
    "load",
    "loading",
    "spinner",
    "busy",
    "wait"
  ],
  "author": "Zak Cox",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Zak-C/ngx-loading/issues"
  },
  "homepage": "https://github.com/Zak-C/ngx-loading#readme",
  "files": [
    "dist/*"
  ],
  "peerDependencies": {
    "@angular/core": "^4.0.0"
  },
  "devDependencies": {
    "@angular/core": "^4.0.2",
    "@angular/compiler": "^4.0.2",
    "@angular/compiler-cli": "^4.0.2",
    "rollup": "^0.41.6",
    "rxjs": "^5.3.0",
    "tslint": "^5.1.0",
    "typescript": "^2.2.2",
    "webpack": "^2.4.1",
    "zone.js": "^0.8.5"
  }
}